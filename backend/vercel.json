{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "env": {
    "DATABASE_URL": "sqlite+aiosqlite:////tmp/bidops.db",
    "ENVIRONMENT": "production",
    "DEBUG": "false",
    "SECRET_KEY": "@secret_key",
    "GOOGLE_API_KEY": "@google_api_key"
  },
  "functions": {
    "app/main.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
