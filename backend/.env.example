# BidOps AI Environment Configuration
# Copy this file to .env and customize

# Application
APP_NAME=BidOps AI
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://bidops:bidops@localhost:5432/bidops
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=bidops_documents

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI (Cloud LLM)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ollama (Local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
USE_LOCAL_LLM=false

# Storage Paths
STORAGE_PATH=./storage
PROJECTS_PATH=./storage/projects
TEMP_PATH=./storage/temp
DATABASE_PATH=./storage/database

# File Processing
MAX_UPLOAD_SIZE_MB=500
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# OCR (Tesseract)
TESSERACT_CMD=tesseract
TESSERACT_LANG=eng+ara

# CAD Processing (ODA File Converter)
ODA_CONVERTER_PATH=C:\Program Files\ODA\ODAFileConverter\ODAFileConverter.exe

# Email (SMTP)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-password
SMTP_FROM=procurement@domain.com

# Microsoft Graph (for Outlook/OneDrive integration)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# AI Confidence Thresholds
CONFIDENCE_THRESHOLD=0.7
REVIEW_THRESHOLD=0.5
